generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Program {
  id              Int     @id @default(autoincrement())
  title           String
  description     String
  imageUrl        String
  backgroundColor String?
}

model Event {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  date        DateTime
}

model Testimonial {
  id       Int    @id @default(autoincrement())
  name     String
  role     String
  message  String
  imageUrl String
}
